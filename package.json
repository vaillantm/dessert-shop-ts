{
  "name": "desserts-shop",
  "version": "1.0.0",
  "description": "TypeScript Shopping Cart Application",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cpx data.json dist && cpx index.html dist && cpx \"images/**\" dist",
    "watch": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "typescript": "^5.3.3"
  }
}
